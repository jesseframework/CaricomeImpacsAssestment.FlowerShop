@page "/product/detail/{id:guid}"
@using Microsoft.AspNetCore.Mvc.Localization
@using CaricomeImpacsAssestment.FlowerShop.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Packages.SignalR;
@using Volo.Abp.Users
@model CaricomeImpacsAssestment.FlowerShop.Web.Pages.Product.Detail.IndexModel
@inject IHtmlLocalizer<FlowerShopResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Product/Detail/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Product/Detail/Index.js" />
    <abp-script type="typeof(SignalRBrowserScriptContributor)" />
    <script>
        var ck = '@Model.Ck';        
    </script>
}
<div class="container">
   
    @if (Model.ItemsList != null && Model.ItemsList.allItems != null)
    {
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.ItemsList.allItems.Name</h3>
                <h6 class="card-subtitle">@Model.ItemsList.category.Name / @Model.ItemsList.productGroup.Name</h6>
                <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center">
                            

                            <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                                
                                <ol class="carousel-indicators">
                                    <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#imageCarousel" data-slide-to="1"></li>
                                    <li data-target="#imageCarousel" data-slide-to="2"></li>
                                    
                                </ol>

                               
                                <div class="carousel-inner" role="listbox">
                                    <div class="carousel-item active">
                                        <img src="@Model.ItemsList.allItems.ItemImagesUrl1" alt="Image 1" class="d-block w-100">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@Model.ItemsList.allItems.ItemImagesUrl2" alt="Image 2" class="d-block w-100">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@Model.ItemsList.allItems.ItemImagesUrl3" alt="Image 3" class="d-block w-100">
                                    </div>
                                   
                                </div>

                                
                                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            
                        
                        
                        </div>
                            
                        
                        
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Product description</h4>
                        <p>@Model.ItemsList.allItems.Description</p>
                        <h2 class="mt-5">
                            $@Model.ItemsList.price.SellCost
                        </h2>
                        <a href="/cart" class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="View Cart" data-original-title="View Cart"
                                id="viewCart" >
                            <i class="fa fa-shopping-cart"></i>
                            
                        </a>
                        <button class="btn btn-primary btn-rounded" id="addToCartBtn" data-itemid="@Model.ItemsList.allItems.Id">Add To Cart</button>
                        
                        <hr />
                        <input type="number" id="quantityInput" value="1" min="1" />
                        <hr />
                        <h3 class="box-title mt-5">Key Highlights</h3>
                        @Model.ItemsList.allItems.LongDescription
                       
                    </div>

                </div>
            </div>
        </div>
    }
   
</div>

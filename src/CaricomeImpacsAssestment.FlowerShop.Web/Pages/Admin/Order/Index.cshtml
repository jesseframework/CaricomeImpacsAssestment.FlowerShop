@page
@using Microsoft.AspNetCore.Mvc.Localization
@using CaricomeImpacsAssestment.FlowerShop.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Packages.SignalR;
@using Volo.Abp.Users
@model CaricomeImpacsAssestment.FlowerShop.Web.Pages.Admin.Order.IndexModel
@inject IHtmlLocalizer<FlowerShopResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Admin/Order/Index.css" />
}
@section scripts
{
    <abp-script src="/Pages/Admin/Order/Index.js" />
}
<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="col-lg-12">

            <!-- Card -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title">Order List</h4>
                        </div>
                        <div class="col-md-6">
                            <!-- Search Box -->
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search Order...">
                                <div class="input-group-append">
                                    <button class="btn btn-secondary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                    <th>Customer</th>
                                    <th>Order No</th>
                                    <th>Order Date</th>                                   
                                    <th>Quantity</th>                                                                    
                                    <th>Total Due</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.OrderTrackingList)
                                {
                                    <tr>
                                        <td>
                                            <div><strong>Cust Name:</strong> @order.Name</div>
                                            <div><strong>Street:</strong> @order.Street</div>
                                            <div><strong>City:</strong> @order.City</div>
                                            <div><strong>Country:</strong> @order.CountryName</div>
                                        </td>                                       
                                        <td>@order.OrderNo</td>
                                        <td>@order.OrderDate</td>
                                        <td>@order.Quantity</td>
                                        <td>$@order.TotalDue.ToString("0.00")</td>
                                        <td>@order.Status</td>
                                        
                                        

                                        <td>

                                            <a href="/Admin/Order/Detail/@order.OrderNo" class="table-link  text-info">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-reorder fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                            @* <a href="" id="customer-account-id_@order.OrderNo" class="table-link danger delete-cust">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-print fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                            <a href="" id="customer-account-id_@order.OrderNo" class="table-link danger delete-cust">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <!-- Pagination -->
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </div>
</div>

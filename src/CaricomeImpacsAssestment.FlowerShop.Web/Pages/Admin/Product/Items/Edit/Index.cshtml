                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="Seasonal" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="subtitle">Subtitle</label>

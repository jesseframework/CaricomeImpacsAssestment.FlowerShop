@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared.Toolbars
@namespace RazorPages.Pages.CartDropdown
@model Toolbar
@foreach (var toolbarItem in Model.Items.OrderBy(i => i.Order))
{
    <li class="nav-item">@(await Component.InvokeAsync(toolbarItem.ComponentType))</li>
}


<div class="dropdown">
    <!-- Trigger -->
    <a class="nav-link dropdown-toggle" href="#" role="button" id="cartDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span id="totalCostBadge" class="cart-badge">$0.00</span>
        <i class="fa fa-shopping-cart">
            <span id="itemCountBadge" class="cart-badge">0</span>
        </i>
    </a>
    

</div>

